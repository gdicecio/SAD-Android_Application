<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_order3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Sala:"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/table_id_maker"
        app:layout_constraintTop_toTopOf="@+id/label_order1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/label_order1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Tavolo:"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/table_id_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="10"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/label_order1"
        app:layout_constraintTop_toTopOf="@+id/label_order1" />

    <TextView
        android:id="@+id/label_order2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Prodotto:"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/label_order1"
        app:layout_constraintTop_toBottomOf="@+id/label_order1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/menu_item_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Margherita"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toEndOf="@+id/label_order2"
        app:layout_constraintTop_toTopOf="@+id/label_order2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/line_order_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/label_order_4"
        app:layout_constraintTop_toTopOf="@+id/label_order_4" />

    <TextView
        android:id="@+id/label_order_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="620dp"
        android:text="Linea Ordine:"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/label_order1"
        app:layout_constraintTop_toBottomOf="@+id/label_order2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/room_number_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/label_order3"
        app:layout_constraintTop_toTopOf="@+id/label_order1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Ordine:"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/room_number_maker"
        app:layout_constraintTop_toTopOf="@+id/label_order1" />

    <TextView
        android:id="@+id/order_id_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/label_order1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="Utente:"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/line_order_maker"
        app:layout_constraintTop_toTopOf="@+id/label_order_4" />

    <TextView
        android:id="@+id/user_id_maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/label_order_4" />

    <TextView
        android:id="@+id/view_stato"
        android:layout_width="65dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="Stato:"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/label_order1"
        app:layout_constraintTop_toBottomOf="@+id/label_order_4" />

    <TextView
        android:id="@+id/view_valore_stato"
        android:layout_width="214dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:text="In lavorazione"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view_stato"
        app:layout_constraintTop_toTopOf="@+id/view_stato" />
</androidx.constraintlayout.widget.ConstraintLayout>